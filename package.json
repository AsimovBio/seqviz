{
  "name": "@asimov/kernel-universal",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "clean": "rimraf packages/**/.next",
    "dev": "bash -c 'yarn generate -w & yarn workspaces foreach -vip run dev'",
    "debug": "yarn workspaces foreach -vip run --inspect dev",
    "build": "yarn workspaces foreach -vip run build",
    "start": "yarn workspaces foreach -vip run start",
    "type-check": "yarn workspaces foreach -vip run type-check",
    "format": "yarn workspaces foreach -vip run format",
    "lint": "yarn workspaces foreach -vip run lint",
    "test": "yarn workspaces foreach -vip run test",
    "test-all": "yarn workspaces foreach -vip run test-all",
    "generate": "graphql-codegen --config codegen.yml"
  },
  "npmClient": "yarn",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.14.5",
    "@babel/runtime": "^7.14.5",
    "@graphql-codegen/cli": "^1.21.5",
    "@graphql-codegen/introspection": "^1.18.2",
    "@graphql-codegen/typescript": "^1.22.1",
    "@graphql-codegen/typescript-document-nodes": "1.17.12",
    "@graphql-codegen/typescript-graphql-files-modules": "1.18.1",
    "@graphql-codegen/typescript-graphql-request": "^3.2.1",
    "@graphql-codegen/typescript-operations": "^1.18.0",
    "@jest/types": "^27.0.2",
    "@types/testing-library__jest-dom": "^5.14.0",
    "@yarnpkg/pnpify": "^3.0.0-rc.6",
    "babel-eslint": "^10.1.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.28.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest-dom": "latest",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "graphql-codegen-plugin-typescript-swr": "^0.6.1",
    "graphqurl": "^1.0.1",
    "jest": "^27.0.4",
    "prettier": "^2.3.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2",
    "webpack": "^5.38.1"
  },
  "dependencies": {
    "graphql": "^15.5.0",
    "next": "^10.2.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "resolutions": {
    "@mswjs/interceptors": "^0.11.0"
  }
}
